extends layout

block content
    form(action="." method="post")
        
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
        )

        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="name"
        )

        input(type="submit" value="Submit")